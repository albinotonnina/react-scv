{
  "name": "workshare-scv",
  "version": "1.0.0",
  "engines": {
    "node": ">=4.4.0"
  },
  "description": "Create and build React modules with zero initial configuration and minimal fuss",
  "files": [
    "bin",
    "build",
    "commands",
    "config",
    "src"
  ],
  "bin": {
    "scv": "./bin/scv"
  },
  "scripts": {
    "test": "npm explore $(node fixture) -- 'npm install && npm test'"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ]
  },
  "commands": [
    {
      "name": "init",
      "description": "Scaffold and initialize a React-based application",
      "generator": true
    },
    {
      "name": "start",
      "description": "Start a webpack development server",
      "options": {
        "--port [port]": [
          "Specify to port on which to start the development server",
          4000
        ],
        "--config [file]": "Specify an alternate webpack configuration to use"
      }
    },
    {
      "name": "build",
      "description": "Render the application to static assets",
      "environment": "production",
      "options": {
        "--config [file]": "Specify an alternate webpack configuration to use"
      }
    },
    {
      "name": "test",
      "description": "Run the project's tests and generate coverage reports",
      "environment": "test",
      "options": {}
    }
  ],
  "keywords": [
    "react",
    "redux",
    "webpack"
  ],
  "author": "Eli Perelman <eli@eliperelman.com> (http://eliperelman.com/)",
  "license": "MPL-2.0",
  "dependencies": {
    "babel-core": "6.14.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "7.0.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-polyfill": "6.13.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "babel-runtime": "6.11.6",
    "chai": "3.5.0",
    "chai-enzyme": "0.5.1",
    "chimera": "git@github.com:workshare/chimera#6.4.222",
    "clean-webpack-plugin": "0.1.10",
    "css-loader": "0.28.1",
    "deepmerge": "0.2.10",
    "empty": "0.10.1",
    "enzyme": "2.7.1",
    "eslint": "3.5.0",
    "eslint-loader": "1.7.1",
    "eslint-plugin-mocha": "4.5.1",
    "eslint-plugin-react": "6.2.2",
    "exists-file": "2.1.0",
    "exports-loader": "0.6.4",
    "expose-loader": "0.7.3",
    "file-loader": "0.11.1",
    "flow-bin": "0.45.0",
    "flow-status-webpack-plugin": "git@github.com:marcellomontemagno/flow-status-webpack-plugin#bc495c6",
    "html-webpack-plugin": "2.28.0",
    "imports-loader": "0.7.1",
    "jest": "20.0.3",
    "node-sass": "3.10.0",
    "progress-bar-webpack-plugin": "1.9.3",
    "promise-sync": "1.1.5",
    "qs": "6.2.1",
    "react-addons-test-utils": "15.4.2",
    "react-hot-loader": "1.3.1",
    "sass-loader": "6.0.5",
    "sinon": "2.0.0-pre.3",
    "source-map-loader": "0.2.1",
    "style-loader": "0.17.0",
    "url-loader": "0.5.8",
    "vorpal": "1.4.1",
    "webpack": "2.5.0",
    "webpack-dev-server": "2.4.5",
    "webpack-hot-middleware": "2.12.2",
    "webpack-merge": "0.14.1",
    "webpack-node-externals": "^1.5.4",
    "whatwg-fetch": "1.0.0",
    "worker-loader": "0.7.1",
    "yeoman-environment": "1.6.3",
    "yeoman-generator": "0.24.1"
  },
  "devDependencies": {
    "yeoman-test": "1.5.0"
  }
}
